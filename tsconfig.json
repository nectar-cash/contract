{
  "compilerOptions": {
    "target": "es2020",
    "types": [ "node", "ethers", "chai", "mocha" ],
    "module": "CommonJS",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  }
}
